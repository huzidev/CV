- var signatureWorksTechnologies = [
    { label: 'ReactJS' },
    { label: 'RemixJS' },
    { label: 'Shopify' },
    { label: 'SASS/SCSS' },
    { label: 'Bootstrap' },
    { label: 'Polaris' },
    { label: 'TailwindCSS' },
    { label: 'Prisma' },
    { label: 'SQLite' },
    { label: 'MySQL' },
    { label: 'Strapi (CMS)' }
  ]

- var signatureWorksFeatures = [
    { feature: 'Currently working remotely as Junior Developer for developing full-stack web applications with responsive designs.' },
    { feature: 'Uses Remix as backend with ReactJS for frontend.' },
    { feature: 'Managing databases and performing (CRUD) operations using Prisma.' },
    { feature: 'Making and integrating API calls to fetch and send data between frontend and backend.' },
    { feature: 'Debugging and troubleshooting issues to improve application performance and UX.' }
  ]

- var experienceData = [
    {
      company: 'Signature Works LLC',
      currentRole: 'Junior Developer',
      currentDuration: 'Jun 2024 - Present',
      role: 'Intern Junior Developer',
      duration: 'Dec 2023 - Jun 2024',
      technologies: signatureWorksTechnologies,
      features: signatureWorksFeatures
    }
  ]


.container 
    .wrapper 
        .experience__content
            h1.heading Experience
            .experience-details
                each data in experienceData
                    .company-info
                        div 
                            p.focus.company= data.company
                            p.focus.role= data.currentRole
                            p.focus.duration= data.currentDuration
                            p.focus.role= data.role
                            p.focus.duration= data.duration
                            p.focus Technologies: 
                            .skills-container
                                each technologies, i in data.technologies
                                    div
                                        span.focus= technologies.label + (i !== data.technologies.length - 1 ? ',' : '')
                    .features-info
                        ul
                            each features in data.features
                                li= features.feature